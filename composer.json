{
    "name": "dejwcake/craftable-translatable",
    "description": "Make your Eloquent models and other content translated into multiple languages",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "translations",
        "eloquent",
        "language",
        "locale",
        "translate",
        "localization",
        "admin",
        "cms",
        "laravel"
    ],
    "authors": [
        {
            "name": "David Běhal",
            "email": "david.behal@dejw.sk",
            "homepage": "https://www.dejw.sk",
            "role": "Developer"
        },
        {
            "name": "Pavol Perdík",
            "email": "pavol.perdik@brackets.sk",
            "homepage": "https://www.brackets.sk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "laravel/framework": "^12.0",
        "spatie/laravel-translatable": "^6.11.4"
    },
    "require-dev": {
        "larastan/larastan": "^3.1",
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.5.9"
    },
    "autoload": {
        "psr-4": {
            "Brackets\\Translatable\\": "src/"
        },
        "classmap": []
    },
    "autoload-dev": {
        "psr-4": {
            "Brackets\\Translatable\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Brackets\\Translatable\\TranslatableServiceProvider"
            ]
        }
    },
    "branch-alias": {
        "dev-1.0": "1.0-dev",
        "dev-main": "1.0-dev"
    }
}
